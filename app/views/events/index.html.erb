<div id="events">
  <% @events.each do |e| %>
    <div class="event">
      <div class="date">
        <% if e.duration_in_days < 1 %>
          <%= e.start_time.strftime("%d.%m.%Y") %>
        <% else %>
          <%= e.start_time.strftime("%d.%m.%Y") + ' - ' + e.end_time.strftime("%d.%m.%Y") %>
        <% end %>
      </div>
      <div class="name">
        <%= link_to e.name, event_path(e) %>
      </div>
      <div class="location-time">
        <%= e.place_name + " - " + e.start_time.strftime("%Hh") %>
      </div>
    </div>
  <% end %>
<end>