<div id="event-detail">
  <div class="event">
    <div class="date">
      <% if @event.duration_in_days < 1 %>
        <%= @event.start_time.strftime("%d.%m.%Y") %>
      <% else %>
        <%= @event.start_time.strftime("%d.%m.%Y") + ' - ' + @event.end_time.strftime("%d.%m.%Y") %>
      <% end %>
    </div>
    <div class="name">
      <%= @event.name %>
    </div>
    <div class="location-time">
      <%= @event.place_name + " - " + @event.start_time.strftime("%Hh") %>
    </div>
    <%= image_tag @event.cover_source, id: 'image' %>
    <div class="section"></div>
      <div id="address-attending">
        <div id="address"><span class="icon-location"></span><%= @event.place_location_street %></div>
        <div id="attending"><span class="icon-user"></span><%= @event.attending_count %></div>
      </div>
    <div class="section"></div>
      <div id="description">
        <%= sanitize @event.description %>
      </div>
  </div>
</div>